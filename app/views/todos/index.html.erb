<h1> Add a To-Do </h1>

<%= form_for @newtodo do |f| %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.submit :create, class: "submitBtn" %>
 
<% end %>



<h1> To-Do List </h1>
<hr>

<div id="todo_list">
  <ul>
  <% @todos.each do |todo| %>
  <li style="list-style-type:none">

     <%= button_to "X", todo, method: :delete %> 
     <div style="display:inline-block"><%= todo.description %></div>

  </li>
  <% end %>
  </ul>
</div>
