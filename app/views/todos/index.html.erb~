<%= form_for @newtodo do |f| %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.submit :create %>
 
<% end %>



<h1> To-Do List </h1>
<hr>
<% @todos.each do |todo| %>
   <div class="hehe">
     <span>Description: <%= todo.description %></span>
     <span>Important: <%= todo.important %></span>
     <span>Due soon: <%= todo.soon %></span>
     
     <div style="float:right"> <%= button_to "Complete and Remove", todo, method: :delete %></div>
   </div>
<% end %>
